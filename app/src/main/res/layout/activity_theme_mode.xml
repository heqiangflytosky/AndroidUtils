<?xml version="1.0" encoding="utf-8"?>
<com.android.hq.androidutils.thememode.themeview.ThemeLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:nightMode="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    nightMode:nightBackground="@color/night_background_0"
    tools:context=".thememode.ThemeModeActivity">
    <com.android.hq.androidutils.thememode.themeview.ThemeButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="切换夜间模式"
        android:onClick="convertTheme"
        nightMode:nightTextColor="@color/white_50"
        nightMode:nightBackground="@drawable/night_button_game_play_bg"/>
    <com.android.hq.androidutils.thememode.themeview.ThemeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black_100"
        nightMode:nightTextColor="@color/white_50"
        android:text="测试夜间模式"/>
    <com.android.hq.androidutils.thememode.themeview.ThemeImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"
        nightMode:nightAlpha="0.5"/>

</com.android.hq.androidutils.thememode.themeview.ThemeLinearLayout>