<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--夜间模式自定义属性-->
    <declare-styleable name="NightTheme">
        <attr name="nightTextColor" format="reference|color" />
        <attr name="nightBackground" format="reference|color" />
        <attr name="nightFilterColor" format="reference|color" />
        <attr name="nightAlpha" format="float" />
        <attr name="nightTextLoadingColor" format="reference|color" />
    </declare-styleable>

    <!--BannerView-->
    <declare-styleable name="BannerView">
        <attr name="loop" format="boolean"/>
        <attr name="auto_play" format="boolean"/>
        <attr name="interval" format="integer"/>
        <attr name="indicator" format="boolean"></attr>
        <attr name="indicator_color" format="color"/>
        <attr name="indicator_selected_color" format="color"/>
        <attr name="indicator_size" format="dimension"/>
        <attr name="indicator_layout_gravity" format="enum">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>

</resources>
